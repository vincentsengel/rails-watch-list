
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.fnac-static.com/multimedia/Images/FD/Comete/120558/CCP_IMG_ORIGINAL/1568495.jpg);">
  <div class="container">
    <h1>Watch lists</h1>
    <p>Entrez le nom de votre liste ...</p>
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit 'submit', class: "btn btn-flat" %>
      <% end %>
        <%= link_to "Cancel", root_path, class: "btn btn-flat" %>
  </div>
</div>
